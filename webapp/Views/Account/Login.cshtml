@model DnDGameMaster.WebApp.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    var needsConfirmation = ViewData["NeedsConfirmation"] as bool? == true;
    var emailForConfirmation = ViewData["EmailForConfirmation"] as string ?? string.Empty;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="text-center mb-4">Welcome Back, Adventurer</h1>
        <div class="card shadow-lg border-0">
            <div class="card-header">
                <h2 class="text-center">Log in to your account</h2>
            </div>
            <div class="card-body p-4">
                @if (needsConfirmation)
                {
                    <div class="alert alert-warning mb-4">
                        <h5><i class="fas fa-envelope me-2"></i> Email Not Confirmed</h5>
                        <p>Your account email needs to be confirmed before you can log in.</p>
                        <form asp-action="ResendConfirmationEmail" asp-route-email="@emailForConfirmation" method="get">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i> Resend Confirmation Email
                            </button>
                        </form>
                    </div>
                }
                
                <form id="account" method="post">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
                        <p class="lead">Sign in to continue your adventures!</p>
                    </div>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                    <div class="form-group mb-3 text-center">
                        <button id="login-submit" type="submit" class="btn btn-lg btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i> Log in
                        </button>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-6 text-center">
                            <a asp-action="ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                        </div>
                        <div class="col-md-6 text-center">
                            <a asp-action="Register" class="text-decoration-none">Register as a new user</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 