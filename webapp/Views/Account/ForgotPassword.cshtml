@model DnDGameMaster.WebApp.Controllers.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="card mt-4">
            <div class="card-body">
                <form method="post">
                    <h2 class="card-title">Enter your email.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p>
                        Enter the email address associated with your account, and we'll send you a link to reset your password.
                    </p>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Email" class="form-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <p>
                <a asp-action="Login">Return to login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 