@{
    ViewData["Title"] = "Email Confirmation Error";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-header">
                <h2 class="text-center">Email Confirmation Failed</h2>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                    <h3>There was a problem</h3>
                    <p class="lead">
                        We couldn't confirm your email address. This could be due to:
                    </p>
                    <ul class="list-unstyled text-start">
                        <li><i class="fas fa-circle fa-xs me-2"></i> The confirmation link has expired</li>
                        <li><i class="fas fa-circle fa-xs me-2"></i> The link was modified or is incomplete</li>
                        <li><i class="fas fa-circle fa-xs me-2"></i> Your email has already been confirmed</li>
                    </ul>
                </div>
                <div class="text-center mt-4">
                    <div class="row">
                        <div class="col-6">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100">Go to Login</a>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary w-100">Register Again</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 