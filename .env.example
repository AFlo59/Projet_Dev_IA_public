# ===========================================================================
# Variables d'environnement pour docker-compose.yml
# ===========================================================================
# Copier ce fichier en .env et configurer avec vos vraies valeurs

# ---------------------------------------------------------------------------
# Configuration des bases de données - UTILISATEURS ET MOTS DE PASSE
# ---------------------------------------------------------------------------
# Utilisateur admin pour toutes les bases de données (REMPLACER)
DB_ADMIN_USER=your_admin_user
DB_ADMIN_PASSWORD=your_secure_admin_password

# Utilisateur lecture seule pour silver_db (REMPLACER)
DB_READ_USER=your_read_user  
DB_READ_PASSWORD=your_read_password

# Utilisateur pour les données de jeu (REMPLACER)
GAME_DB_USER=your_game_user
GAME_DB_PASSWORD=your_game_password

# Utilisateur admin pour authentification JWT LLMGameMaster (REMPLACER)
AUTH_DB_USER=your_admin_user
AUTH_DB_PASSWORD=your_admin_password

# ---------------------------------------------------------------------------
# Configuration des bases de données - NOMS ET PORTS
# ---------------------------------------------------------------------------
# Noms des bases de données
BRONZE_DB_NAME=bronze_db
SILVER_DB_NAME=silver_db
APP_DB_NAME=app_db

# Ports externes pour accès depuis l'hôte (personnalisables)
BRONZE_DB_EXTERNAL_PORT=5435
SILVER_DB_EXTERNAL_PORT=5436
APP_DB_EXTERNAL_PORT=5437

# ---------------------------------------------------------------------------
# Configuration LLM GameMaster
# ---------------------------------------------------------------------------
# Clés API LLM (REMPLACER PAR VOS VRAIES CLÉS)
OPEN_AI_KEY=sk-proj-your_openai_key_here
OPEN_AI_MODEL=gpt-4o
OPEN_AI_MAX_TOKEN=13000

ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
ANTHROPIC_MAX_TOKEN=20000

# ---------------------------------------------------------------------------
# Configuration des services d'email
# ---------------------------------------------------------------------------
# Service Brevo (REMPLACER PAR VOS CLÉS)
BREVO_SECRET_KEY=your_brevo_secret_key
BREVO_API_KEY=your_brevo_api_key
BREVO_FROM_EMAIL=your_email@domain.com
BREVO_FROM_NAME="D&D GameMaster"

# Service Mailjet (alternative - REMPLACER PAR VOS CLÉS)
MAILJET_SECRET_KEY=your_mailjet_secret_key
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_FROM_EMAIL=your_email@domain.com
MAILJET_FROM_NAME="D&D GameMaster"

# Configuration Email générique (optionnel - si vous n'utilisez pas Brevo/Mailjet)
EMAIL_FROM=your_email@domain.com
EMAIL_SMTP_SERVER=smtp.your-provider.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_smtp_username
EMAIL_PASSWORD=your_smtp_password

# ---------------------------------------------------------------------------
# Configuration Azure Blob Storage
# ---------------------------------------------------------------------------
# Chaîne de connexion Azure (REMPLACER PAR VOTRE VALEUR)
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER=jsons
JSON_BLOB_PATH=data/

# ---------------------------------------------------------------------------
# Configuration JWT et sécurité
# ---------------------------------------------------------------------------
# Clé secrète JWT (MÊME clé pour DataReference et WebApp)
JWT_SECRET=your_jwt_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Configuration JWT spécifique LLM (WebApp) - MÊME VALEUR que JWT_SECRET_KEY  
LLM_JWT_SECRET_KEY=your_jwt_secret_key_here
LLM_JWT_EXPIRATION_HOURS=24
LLM_ENABLE_AUTH=true

# Configuration générale
ENABLE_AUTH=true
CORS_ORIGINS=http://localhost,https://localhost,http://localhost:80,https://localhost:443

# ---------------------------------------------------------------------------
# Configuration des ports des services
# ---------------------------------------------------------------------------
# Ports externes pour accès depuis l'hôte
DATAREFERENCE_API_EXTERNAL_PORT=5000
LLM_GAMEMASTER_EXTERNAL_PORT=5001
WEBAPP_HTTP_PORT=80
WEBAPP_HTTPS_PORT=443

# ---------------------------------------------------------------------------
# Configuration LLM Provider
# ---------------------------------------------------------------------------
# Provider LLM par défaut (openai ou anthropic)
LLM_PROVIDER=openai

# URL de base pour les images générées
BASE_IMAGE_URL=http://localhost:5001
